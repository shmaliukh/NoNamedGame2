<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>NoNamedGame2</artifactId>
    <groupId>xyz.nonamed</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>game-client</artifactId>
  <version>1.0.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>xyz.nonamed.gameclient.Launcher</mainClass>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>2.3.3</version>
        <executions>
          <execution>
            <id>l4j</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <dontWrapJar>false</dontWrapJar>
              <headerType>gui</headerType>
              <jar>${project.basedir}/target/game-client-${project.version}.jar</jar>
              <outfile>../game-app/client-app-${project.version}.exe</outfile>
              <chdir>.</chdir>
              <priority>normal</priority>
              <stayAlive>false</stayAlive>
              <restartOnCrash>false</restartOnCrash>
              <icon>../game-app/config/client_icon.ico</icon>
              <jre>
                <path>jre</path>
                <requires64Bit>true</requires64Bit>
                <requiresJdk>jdkOnly</requiresJdk>
                <requires64Bit>64/32</requires64Bit>
              </jre>
              <splash>
                <file>../game-app/config/client_logo.bmp</file>
                <waitForWindow>true</waitForWindow>
                <timeout>10</timeout>
                <timeoutErr>true</timeoutErr>
              </splash>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <feign-core.version>12.3</feign-core.version>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>19.0.2.1</javafx.version>
  </properties>
</project>
